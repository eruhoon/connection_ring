<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linear_memo_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkgray"
        android:gravity="right"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnMemoWriteComplete"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:background="@drawable/btn_memo_write_complete"
            android:gravity="right"
            android:scaleType="fitXY" />
        
        <ImageButton
            android:id="@+id/btnMemoWriteCorrection"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:background="@drawable/btn_memo_write_correction"
            android:gravity="right"
            android:scaleType="fitXY"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:text="DashBoard Name : "
            android:textSize="15dip"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_MemoWrite"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_memo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/IcTitle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_memo"
            android:scaleType="fitXY" />

        <EditText
            android:id="@+id/editTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:background="@drawable/btn_memo_write_title"
            android:hint="제목을 입력하세요" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_memo_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/editContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="top"
            android:hint="노트 작성" />
    </LinearLayout>

</LinearLayout>